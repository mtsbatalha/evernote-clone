# =============================================================================
# Database (MySQL)
# Local: mysql://root:root@localhost:3306/evernote_clone
# Remote: mysql://user:password@host:port/database
DATABASE_URL="mysql://root:root@localhost:3306/evernote_clone"

# =============================================================================
# REDIS (Cache & Sessions)
# =============================================================================
# Local: redis://localhost:6379
# Remote with password: redis://:password@host:6379
# Set to empty to disable Redis (sessions will use memory)
REDIS_URL="redis://localhost:6379"

# =============================================================================
# JWT & AUTH
# =============================================================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Public URLs (for Nginx Proxy Manager / Remote Access)
# APP_URL: The URL where the user accesses the web app (e.g. https://notes.mydomain.com OR http://192.168.1.50:3000)
# API_PUBLIC_URL: The URL where the API is accessible (e.g. https://api.notes.mydomain.com OR http://192.168.1.50:4000)
APP_URL="http://localhost:3000"
API_PUBLIC_URL="http://localhost:4000"

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret-change-in-production"
NEXTAUTH_URL="http://localhost:3000" # Should match APP_URL in production

# OAuth (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# =============================================================================
# S3 / OBJECT STORAGE
# =============================================================================
# MinIO (local):     http://localhost:9000
# AWS S3:            https://s3.amazonaws.com (set S3_FORCE_PATH_STYLE=false)
# Cloudflare R2:     https://<account-id>.r2.cloudflarestorage.com
# DigitalOcean:      https://<region>.digitaloceanspaces.com
S3_ENDPOINT="http://localhost:9000"
S3_ACCESS_KEY="minioadmin"
S3_SECRET_KEY="minioadmin"
S3_BUCKET="evernote-attachments"
S3_REGION="us-east-1"
# Set to "false" for AWS S3, "true" for MinIO/R2/compatible
S3_FORCE_PATH_STYLE="true"

# =============================================================================
# MEILISEARCH (Full-text Search)
# =============================================================================
# Set to empty to disable (will use database search fallback)
MEILISEARCH_HOST="http://localhost:7700"
MEILISEARCH_API_KEY="masterKey"

# =============================================================================
# WEBSOCKET
# =============================================================================
WS_PORT=1234

# =============================================================================
# REMOTE SERVICES MODE
# =============================================================================
# Set to "true" to skip starting local Docker containers
# Useful when all services are remote
USE_REMOTE_SERVICES="false"
